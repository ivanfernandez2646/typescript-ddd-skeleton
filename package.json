{
  "name": "typescript-ddd-skeleton",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "url": "https://github.com/ivanfernandez2646/typescript-ddd-skeleton"
  },
  "license": "",
  "engines": {
    "node": ">=22.11.0",
    "npm": ">=10.9.0"
  },
  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/cms/backend/start.ts",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix && prettier --write .",
    "test": "npm run test:unit && npm run test:integration && npm run test:features",
    "test:unit": "NODE_ENV=test jest --verbose",
    "test:features": "docker-compose up -d && NODE_ENV=test jest --verbose --runInBand --config=./jest.config.cucumber.js && docker-compose down",
    "test:integration": "docker-compose up -d && NODE_ENV=test jest --verbose --runInBand --config=./jest.config.integration.js && docker-compose down",
    "start:prod": "NODE_ENV=production node dist/src/apps/cms/backend/start",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di && npm run build:swagger && npm run lint",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:swagger": "copy 'docs/openapi.yml' dist",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "bodybuilder": "^2.5.1",
    "bson": "^6.10.0",
    "compression": "^1.7.5",
    "convict": "^6.2.4",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.0",
    "copy": "^0.3.2",
    "errorhandler": "^1.5.1",
    "express": "^4.21.1",
    "glob": "^11.0.0",
    "helmet": "^8.0.0",
    "http-status": "^2.0.0",
    "jest-cucumber": "^4.5.0",
    "moment": "^2.30.1",
    "mongodb": "^6.11.0",
    "node-dependency-injection": "^3.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.3",
    "@faker-js/faker": "^9.2.0",
    "@types/compression": "^1.7.5",
    "@types/convict": "^6.1.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cookie-session": "^2.0.49",
    "@types/errorhandler": "1.5.3",
    "@types/express": "^5.0.0",
    "@types/http-status": "^0.2.30",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "^3.4.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript-eslint": "^8.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
